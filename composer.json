{
    "name": "sunaoka/process-guard-php",
    "description": "This library has been designed with the intention of preventing the execution of multiple instances of a script.",
    "keywords": ["php", "process", "guard", "lock", "prevent", "multiple", "instances"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "sunaoka",
            "email": "sunaoka@pocari.org"
        }
    ],
    "require": {
        "php": "^8.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12 || ^2.0",
        "phpstan/phpstan-phpunit": "^1.4 || ^2.0",
        "phpunit/phpunit": "^9.6.20 || ^10.5.30 || ^11.3.1"
    },
    "autoload": {
        "psr-4": {
            "Sunaoka\\ProcessGuard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sunaoka\\ProcessGuard\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
